DESCRIPTION="GnuPG error code library"
HOMEPAGE="http://www.gnupg.org/related_software/libgpg-error/"
SRC_URI="ftp://ftp.gnupg.org/gcrypt/${PN}/${P}.tar.bz2
		 ftp://ftp.gnupg.org/gcrypt/${PN}/${P}.tar.bz2.sig"

abi=0
PKG_NAMES="${PN} ${PN}${abi} ${PN}-devel"
PKG_HINTS='setup runtime devel'
PKG_CONTENTS[0]='--exclude=aclocal usr/bin/*.exe usr/share/'
PKG_CONTENTS[1]="usr/bin/*-${abi}.dll"
PKG_CONTENTS[2]='usr/bin/*-config usr/include/ usr/lib/ usr/share/aclocal/'
